<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TheCommonRoom</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-materia.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" style="font-size:28px" asp-area="" asp-controller="Home" asp-action="Index">TheCommonRoom</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" style="font-size:20px" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            @if (User.IsInRole("Roommate") || User.IsInRole("Household Administrator"))
                            {
                                <a class="nav-link text-light" style="font-size:20px" asp-area="" asp-controller="Events" asp-action="Index">Calendar</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (User.IsInRole("Roommate") || User.IsInRole("Household Administrator"))
                            {
                                <a class="nav-link text-light" style="font-size:20px" asp-area="" asp-controller="Announcements" asp-action="Index">Announcements</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (User.IsInRole("Roommate") || User.IsInRole("Household Administrator"))
                            {
                                <a class="nav-link text-light" style="font-size:20px" asp-area="" asp-controller="Bills" asp-action="Index">Bills</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (User.IsInRole("Roommate") || User.IsInRole("Household Administrator"))
                            {
                                <a class="nav-link text-light" style="font-size:20px" asp-area="" asp-controller="Polls" asp-action="Index">Polls</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (User.IsInRole("Roommate") || User.IsInRole("Household Administrator"))
                            {
                                <a class="nav-link text-light" style="font-size:20px" asp-area="" asp-controller="Chores" asp-action="Index">Chores</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2020 - TheCommonRoom - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
