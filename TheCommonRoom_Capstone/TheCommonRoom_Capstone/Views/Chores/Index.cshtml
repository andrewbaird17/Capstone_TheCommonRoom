@model IEnumerable<TheCommonRoom_Capstone.Models.Roommate>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chore List</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChoreAssigned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChoreCompleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChoreAssigned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChoreCompleted)
            </td>
            <td>
                <a asp-action="EditChore" asp-controller="Roommates" asp-route-id="@item.Id">Mark Chore Completed</a>
            </td>
        </tr>
}
    </tbody>
</table>
